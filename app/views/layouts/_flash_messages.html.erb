<% flash.each do |message_key, message| %>
  <div id="flash-banner" class="flex justify-between p-4 <%= message_key == 'success' ? 'bg-blue-200' : 'bg-red-200' %>">
    <%= message %>
    <button id="close-flash-banner-btn">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 hover:bg-blue-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
      </svg>
    </button>
  </div>
<% end %>

<script>
try {
  document.getElementById("close-flash-banner-btn").addEventListener('click', function () {
    document.getElementById("flash-banner").style.display = "none";
  });
} catch (error) {
  // do nothing
}

</script>