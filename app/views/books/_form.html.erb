<%= form_with model: @book, local: true, class: "bg-gray-200 p-4 mx-4 w-fit" do |f| %>

  <% if @book.errors.any? %>
    <div>
      This form contains <%= pluralize(@book.errors.count, "error") %>.
      <ul>
        <% @book.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :name, class: "block" %>
  <%= f.text_field :name, class: "block" %>

  <%= f.label :description, class: "block" %>
  <%= f.text_area :description, class: "block" %>

  <%= f.submit class: "bg-blue-600 text-white rounded-md p-2 mt-2" %>
<% end %>