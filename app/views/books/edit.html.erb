<div class="lg:grid lg:grid-cols-2">

  <section>
  <h1 class="p-4 text-2xl">Editing book: '<%= @book.name %>'</h1>
    <div class="bg-white border border-black mx-4 p-4 max-w-full">
      <div class="flex items-center border-b border-black mb-4 pb-4">
        <h2 class="text-2xl">
          Edit or add articles:
        </h2>
        <%= link_to 'New top-level article', new_book_article_path(@book), class: "bg-blue-600 rounded-md text-white ml-4 p-2" %>
      </div>

      <ul>
        <% @book.top_level_articles.each do |top_level_article| %>
          <%= render partial: 'editor_article_tree_part', locals: {article: top_level_article} %>
        <% end %>
      </ul>
        
      
    </div>
  </section>
  
  <section>
  <% if @user.owns_book?(@book) %>
      <h1 class="p-4 text-2xl">Book details:</h1>
      <div class="max-w-full flex items-center">
        <%= render 'form' %>
        <button id="show-share-book-modal-btn" class="bg-blue-600 p-2 rounded-md text-white">Share Book</button>
        <%= link_to "Delete Book", book_path(@book), class: "p-2 ml-4 rounded-md bg-red-600 text-white", data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
      </div>
  <% end %>
  </section>
</div>

<% if @user.owns_book?(@book) %>
  <%= render partial: "share_book_form", layout: "shared/modal", locals: {label: "share-book"} %>
<% end %>

<script>
document.getElementById("show-share-book-modal-btn").addEventListener('click', function() {
  document.getElementById('share-book-modal').style.display = "block";
})

document.getElementById("share-book-modal-close-btn").addEventListener('click', function() {
  document.getElementById('share-book-modal').style.display = "none";
})

</script>