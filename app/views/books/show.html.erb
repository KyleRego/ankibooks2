<div class="bg-white border border-black m-4 p-4 w-fit">

  <h1 class="text-2xl border-b border-black pb-4 mb-4">
    <%= @book.name %>
    <a class="text-blue-600 underline" href="/books/<%= @book.id %>/edit">Edit</a>
  </h1>

  <ul>
    <% @book.top_level_articles.each do |top_level_article| %>
      <%= render partial: 'article_tree_part', locals: {article: top_level_article} %>
    <% end %>
  </ul>

  <%= link_to 'New article', new_book_article_path(@book), class: "text-blue-600 underline" %>
</div>
<p class="p-4"><%= @book.description %></p>
