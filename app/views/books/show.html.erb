<h1 class="px-4 pt-4 text-2xl"><%= @book.name %></h1>
<h2 class="px-4 pt-4 text-xl">
  <%= @book.description %>
  <a class="text-blue-600 underline" href="/books/<%= @book.id %>/edit">Edit</a>
</h2>

<ul class="m-4 p-4 list-inside list-disc bg-white border border-black w-fit">
  <h3 class="text-lg">Articles:</h3>
  <% @book.top_level_articles.each do |article| %>
    <li>
      <%= article.name %>
      <%= link_to "edit", edit_book_article_path(@book, article), class: "pl-1 underline text-blue-600" %>
      <%= link_to "New subarticle", "/books/#{@book.id}/articles/#{article.id}/new", class: "underline text-blue-600" %>
      <ul>
      <% article.subarticles.each do |subarticle| %>
        <li><%= subarticle.name %></li>
      <% end %>
      </ul>
    </li>
  <% end %>
  <%= link_to "New article", new_book_article_path(@book), class: "text-blue-600 underline" %>
</ul>
