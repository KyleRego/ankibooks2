<style>
.article-content-displayed h1, .article-content-displayed h2, .article-content-displayed h3, .article-content-displayed h4, .article-content-displayed h5, .article-content-displayed h6 {
  font-weight: 500;
  border-bottom: 1px solid gray;
}
.article-content-displayed h1 {
  font-size: 2.5rem;
}
.article-content-displayed h2 {
  font-size: 2.25rem;
}
.article-content-displayed h3 {
  font-size: 2rem;
}
.article-content-displayed h4 {
  font-size: 1.75rem;
}
.article-content-displayed h5 {
  font-size: 1.5rem;
}
.article-content-displayed h6 {
  font-size: 1.25rem;
}
.article-content-displayed .ankiNote {
  font-weight: 350;
}
.article-content-displayed img {
  padding: 1rem;
  margin: auto;
}
.article-content-displayed p {
  margin-top: 0.5rem;
  margin-bottom: 0.5rem;
}
</style>

<div class="lg:grid lg:grid-cols-4 min-h-screen">
  
  <div class="col-span-1 max-h-fit p-4 flex flex-col justify-start items-baseline">
    <div class="bg-white border border-black shadow-md rounded-md p-4">
      <h1 id="title-for-book-with-id-<%= @book.id %>" class="book-title text-center text-2xl border-b border-black pb-4 mb-4">
        <%= @book.name %>
      </h1>

      <ul>
        <% @book.top_level_articles.each do |top_level_article| %>
          <%= render partial: 'reader_article_tree_part', locals: {article: top_level_article} %>
        <% end %>
      </ul>
    </div>
    <a id="download-deck-button" href="" class="bg-blue-600 text-white rounded-md text-sm p-2 mt-1">Download deck</a>

  </div>

  <div id="article-content-div" class="article-content-displayed bg-white border col-span-3 border-black shadow-md rounded-md m-4 p-4">
    
  </div>

</div>